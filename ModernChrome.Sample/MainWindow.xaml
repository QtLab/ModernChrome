    <modern:ModernWindow.StatusBar>
        <TextBlock VerticalAlignment="Center">Ready</TextBlock>
    </modern:ModernWindow.StatusBar>
    <Grid Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="6">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="Height" Value="32" />
                </Style>
            </StackPanel.Resources>
            <TextBlock x:Name="ThemeText" Text="Themes" HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,8" FontSize="20" />
            <Button Click="ChangeTheme" Tag="LightBlue">Light Blue Theme</Button>
            <Button Click="ChangeTheme" Tag="DarkBlue">Dark Blue Theme</Button>
            <Button Click="ChangeTheme" Tag="Light">Generic Light Theme</Button>
            <Button Click="ChangeTheme" Tag="Dark">Generic Dark Theme</Button>
            <Button Click="ChangeTheme" Tag="Blend">Blend Theme</Button>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="6">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="Height" Value="32" />
                </Style>
            </StackPanel.Resources>
            <TextBlock x:Name="AccentText" Text="Accents" HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,8" FontSize="20" />
            <Button Click="ChangeAccent" Tag="Blue">Blue Accent</Button>
            <Button Click="ChangeAccent" Tag="Orange">Orange Accent</Button>
            <Button Click="ChangeAccent" Tag="Purple">Purple Accent</Button>
            <Button Click="ChangeAccent" Tag="Green">Green Accent</Button>
        </StackPanel>
        <StackPanel Grid.Column="3" Margin="6">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,0,0,8"/>
                    <Setter Property="Height" Value="32" />
                </Style>
            </StackPanel.Resources>
            <TextBlock x:Name="ActionText" Text="Actions" HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,8" FontSize="20" />
            <Button Click="ShowDialog">Show Dialog</Button>
        </StackPanel>
    </Grid>
</modern:ModernWindow>